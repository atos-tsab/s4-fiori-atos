<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:card="sap.f.cards"
 	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
    displayBlock="true"
	xmlns:f="sap.f"
    xmlns="sap.m">

	<Panel accessibleRole="Form" height="auto" class="sapUiTinyMarginTop">
		<content>
			<f:GridContainer>
				<f:layout>
					<f:GridContainerSettings rowSize="4px" columnSize="auto" gap="5px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="4px" columnSize="auto" gap="5px" />
				</f:layoutXS>
				<f:items>
					<f:Card width="100%">
						<f:layoutData>
							<f:GridContainerItemLayoutData columns="4" />
						</f:layoutData>
						<f:header>
							<card:Header title="{i18n>Capture}" />
						</f:header>
						<f:content>

							<VBox class="sapUiSmallMargin" alignContent="SpaceBetween" justifyContent="Start" width="100%">
								<HBox justifyContent="Start" wrap="Wrap" class="sapUiSmallMarginBottom" visible="{ScanModel>/showOk}">
									<HBox justifyContent="Start" wrap="Wrap">
										<Label text="{ScanModel>/showOkText}" width="auto" wrapping="true" class="atosOkText sapUiLargeMarginBegin sapUiTinyMarginTop" />
									</HBox>
								</HBox>

			 					<HBox justifyContent="Start" wrap="Wrap" class="sapUiSmallMarginBottom" visible="{ScanModel>/showErr}">
									<HBox justifyContent="Start" wrap="Wrap">
										<Label text="{ScanModel>/showErrText}" width="auto" wrapping="true" class="atosErrorText sapUiLargeMarginBegin sapUiTinyMarginTop" />
									</HBox>
								</HBox>

								<!-- ============================================================================================================================== -->

								<HBox justifyContent="Start" wrap="Wrap" visible="{ScanModel>/viewQueue}">
									<HBox justifyContent="Start" wrap="Wrap">
										<Label text="{i18n>IdQueue}{i18n>Colon}" width="90px" class="sapUiLargeMarginBegin sapUiTinyMarginTop" />
										<Input id="idInput_Queue" value="{ScanModel>/valueMaterialNo}" width="160px" class="atosMInputBaseDisabled" />
										<Button text="" tooltip="{i18n>ToolTipBarcodeScan}" icon="sap-icon://bar-code" type="Emphasized"
												press="onScan('Queue')" width="auto" class="sapUiTinyMarginBegin sapUiMediumMarginEnd" />
									</HBox>
								</HBox>

								<VBox justifyContent="Start" wrap="Wrap" visible="{ScanModel>/viewLocation}">
									<HBox justifyContent="Start" wrap="Wrap">
										<Label text="{i18n>SslQueue}{i18n>Colon}" width="180px" class="sapUiLargeMarginBegin sapUiTinyMarginTop" />
									</HBox>
									<HBox justifyContent="Start" wrap="Wrap">
										<Input id="idInput_SourceStorage" value="{ScanModel>/valueMaterialNo}" width="240px" class="atosMInputBaseDisabled sapUiLargeMarginBegin" />
										<Button text="" tooltip="{i18n>ToolTipBarcodeScan}" icon="sap-icon://bar-code" type="Emphasized"
												press="onScan('Location')" width="auto" class="sapUiTinyMarginBegin sapUiMediumMarginEnd" />
									</HBox>
								</VBox>
							</VBox>

						</f:content>
					</f:Card>
				</f:items>
			</f:GridContainer>
		</content>
	</Panel>

</core:FragmentDefinition>