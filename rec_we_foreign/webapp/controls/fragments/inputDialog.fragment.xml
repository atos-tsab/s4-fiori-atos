<core:FragmentDefinition
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog title="{ parts: ['i18n>TitleInputDialog', 'scanModel>/type'], formatter: 'jQuery.sap.formatMessage'}"
            showHeader="true" contentWidth="auto" contentHeight="auto" class="sapUiContentPadding">
        <content>
            <VBox>
                <HBox>
                    <Label text="{i18n>ExtLsPackage}{i18n>Colon}" width="140px" class="sapUiTinyMarginTop" />
					<Input change="onScanInputChanged" liveChange="onScanInputLiveChange" width="240px" 
                           value="{scanModel>/valueMaterialNo}" class="sapUiTinyMarginEnd" />
                </HBox>
                <HBox>
                    <Label text="" width="140px" class="sapUiTinyMarginTop" />
                    <Text text="{i18n>HintVideoInputDialog}" width="auto" class="customInputInfo" />
                 </HBox>
            </VBox>
        </content>

        <beginButton>
            <Button press="onOkPress" text="{i18n>Ok}" icon="sap-icon://accept" enabled="{scanModel>/okButton}" />
        </beginButton>
        <endButton>
            <Button press="onCancelPress" text="{i18n>Cancel}" icon="sap-icon://decline" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>