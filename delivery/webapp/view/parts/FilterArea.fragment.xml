<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:card="sap.f.cards"
 	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
    displayBlock="true"
	xmlns:f="sap.f"
    xmlns="sap.m">

	<Panel accessibleRole="Form" height="185px">
		<content>
			<f:GridContainer>
				<f:layout>
					<f:GridContainerSettings rowSize="4px" columnSize="208px" gap="5px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="4px" columnSize="208px" gap="5px" />
				</f:layoutXS>
				<f:items>
					<f:Card>
						<f:layoutData>
							<f:GridContainerItemLayoutData columns="4" />
						</f:layoutData>
						<f:header>
							<card:Header title="{i18n>PodSelection}" />
						</f:header>
						<f:content>
							<VBox class="sapUiSmallMargin" justifyContent="Start">
								<HBox justifyContent="SpaceBetween" wrap="Wrap">
									<HBox justifyContent="Start">
										<Label text="{i18n>ExtLsPackage}" width="115px" class="sapUiMediumMarginBegin sapUiTinyMarginTop" />
										<Input id="a" value="" width="200px" />
									</HBox>

									<HBox justifyContent="Start">
										<Label text="{i18n>ExtShipment}" width="115px" class="sapUiMediumMarginBegin sapUiTinyMarginTop" />
										<Input id="b" value="" width="200px" />
									</HBox>
								</HBox>

								<HBox justifyContent="Start" wrap="Wrap">
									<HBox justifyContent="Start">
										<Label text="{i18n>Delivery}" width="115px" class="sapUiMediumMarginBegin sapUiTinyMarginTop" />
										<Input id="c" value="" width="200px" />
									</HBox>
									<HBox class="sapUiLargeMarginBegin" justifyContent="Start">
									</HBox>
								</HBox>
							</VBox>
						</f:content>
					</f:Card>
				</f:items>
			</f:GridContainer>
		</content>
	</Panel>

</core:FragmentDefinition>